{
  "name": "radix-vue",
  "version": "0.3.1",
  "private": true,
  "packageManager": "pnpm@8.6.3",
  "license": "MIT",
  "repository": "radix-vue/radix-vue",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "story:dev": "pnpm --filter histoire story:dev",
    "build": "rimraf packages/radix-vue/dist  && pnpm run -r build",
    "docs:install": "pnpm --filter docs install",
    "docs:dev": "pnpm --filter docs docs:dev",
    "docs:build": "pnpm --filter docs docs:build",
    "prepare": "pnpm simple-git-hooks",
    "test": "pnpm --filter radix-vue test",
    "lint": "eslint . --ignore-path .gitignore",
    "lint:fix": "eslint . --fix --ignore-path .gitignore",
    "bumpp": "bumpp package.json packages/*/package.json",
    "pub:release": "cd packages/radix-vue && pnpm pub:release"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.7",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "bumpp": "^9.2.0",
    "eslint": "^8.43.0",
    "lint-staged": "^14.0.0",
    "pnpm": "^8.6.12",
    "rimraf": "^5.0.1",
    "simple-git-hooks": "^2.9.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm commitlint --edit ${1}"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
